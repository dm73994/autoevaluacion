        }
        .navbar {
            display: flex;
            justify-content: space-between;
        }
        
        .navbar-brand {
            flex-grow: 1;
        }
        
        .table-container {
            margin-left: -200px;
            margin-right: auto;
            max-width: 500px;
        }
        
        .table-container table {
            margin-bottom: 0;
        }

        .btn-create {
            margin-right: 30px;
        }

        .custom-nav {
            display: flex;
            align-items: center;
        }
        .create-link {
            margin-right: 9000px; 
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            position: sticky;
            top: 0;
            left: 0;
            right: 0;
            z-index: 9999;
        }

        .navbar-brand {
            padding: 5;
        }
        
        .navbar {
            position: relative;
            z-index: 1;
        }

        details {
            position: relative;
            display: inline-block;
            z-index: 2;
        }

        details summary {
            cursor: pointer;
        }

        details ul {
            position: absolute;
            top: 100%;
            left: 0;
            display: none;
            margin: 0;
            padding: 0;
            list-style: none;
            background-color: #9b1a1a;
        }

        details ul li {
            width: 100%;
        }

        details ul li a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            width: 200px;
        }
        details summary {
            cursor: pointer;
            white-space: nowrap; 
        }
        details ul li a:hover {
            background-color: #555;
        }

        details[open] ul {
            display: block;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="navbar-brand"> 
            <a>crud labor</a>
            <details>
                <summary>&#9776;</summary>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorBandejaEntrada">Bandeja de entrada</a></li>
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorListPeriods">Crear periodo académico</a></li>
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorCrudAutoevaluacion">Gestion autoevaluación</a></li>
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorCRUDuser">Gestión docente</a></li>
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorDiligenciarAutoevaluaciones">Realizar autoevaluación</a></li>
                </ul>
            </details>
        </div>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"> 
                <a class="navbar-brand home-link" href="/coordinadorPrincipal"> 
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info btn-create" href="/coordinadorCreateLaborView">Create</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 table-container">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>codigo</th>
                        <th>nombre</th>
                        <th>tipo labor</th>
                        <th>tipo labor codigo</th>
                        <th>horas</th>
                        <th>descripcion</th>
                        <th>activo</th>
                        <th>acciones</th>
                    </thead>
                    <tbody>
                        <% if(data) { %>
                            <% for (var i = 0; i < data.length ; i++){ %>
                                <% if(data[i].activo !== 1) { continue; } %> 
                        
                                <tr>
                                    <td><%= data[i].labor_code %></td>
                                    <td><%= data[i].labor_name %></td>
                                    <td><%= data[i].type_labor_name %></td>
                                    <td><%= data[i].type_labor_code %></td>
                                    <td><%= data[i].labor_hours %></td>
                                    <td><%= data[i].labor_descripcion %></td>
                                    <td>
                                        <% if (data[i].activo === 1) { %>
                                            &#9989;
                                        <% } %>
                                    </td>
                                    <td>
                                        <a class="btn btn-info" href="/coordinadorUpdateLaborView/<%= data[i].labor_code %>">Update</a>
                                    </td>
                                </tr>
                        
                            <% }%>   
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>