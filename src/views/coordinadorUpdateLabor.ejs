<body>
    
    <nav class="navbar navbar-dark  navbar-expand-lg">
        <div class="navbar-brand"> 
            <a>Actualizar labor</a>
            <details>
                <summary>&#9776;</summary>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="btn btn-info" href="/coordinadorBandejaEntrada">Bandeja de entrada</a></li>
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorListPeriods">Crear periodo académico</a></li>
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorCrudAutoevaluacion">Gestion autoevaluación</a></li>
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorCRUDuser">Gestión docente</a></li>
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorCrudLabor">Gestión labor</a></li>
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorDiligenciarAutoevaluaciones">Realizar autoevaluación</a></li>
                </ul>
            </details>
        </div>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"> 
                <a class="navbar-brand home-link" href="/coordinadorPrincipal"> 
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ul>
    </nav>
    <div class="fondo">

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/coordinadorUpdateLabor/<%= data.labor_code %>" method="post">
                                <div class="form-group">
                                    <p for="labor_name">Nombre del Labor</p>
                                    <input type="text" id="labor_name" name="labor_name" value="<%= data.labor_name %>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <p for="type_labor_code">Código del Tipo de Labor</p>
                                    <select id="type_labor_code" name="type_labor_code" class="form-control">
                                        <option value="AD" <%= data.type_labor_code === 'AD' ? 'selected' : '' %>>Administración</option>
                                        <option value="AS" <%= data.type_labor_code === 'AS' ? 'selected' : '' %>>Asesoría</option>
                                        <option value="C" <%= data.type_labor_code === 'C' ? 'selected' : '' %>>Capacitación</option>
                                        <option value="D" <%= data.type_labor_code === 'D' ? 'selected' : '' %>>Docencia</option>
                                        <option value="E" <%= data.type_labor_code === 'E' ? 'selected' : '' %>>Extensión</option>
                                        <option value="OS" <%= data.type_labor_code === 'OS' ? 'selected' : '' %>>Otros Servicios</option>
                                        <option value="PI" <%= data.type_labor_code === 'PI' ? 'selected' : '' %>>Proyectos Investigación</option>
                                        <option value="S" <%= data.type_labor_code === 'S' ? 'selected' : '' %>>Servicios</option>
                                        <option value="TD" <%= data.type_labor_code === 'TD' ? 'selected' : '' %>>Trabajos Docencia</option>
                                        <option value="TI" <%= data.type_labor_code === 'TI' ? 'selected' : '' %>>Trabajos Investigación</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <p for="labor_hours">Horas del Labor</p>
                                    <input type="text" id="labor_hours" name="labor_hours" value="<%= data.labor_hours %>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <p for="activo">Estado</p>
                                    <select id="activo" name="activo" class="form-control">
                                        <option value="1" <%= data.activo === 1 ? 'selected' : '' %>>Activo</option>
                                        <option value="-1" <%= data.activo === -1 ? 'selected' : '' %>>Inactivo</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>' ,
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmationButton: <%= showConfirmButton %>,
                timer:<%= timer %>
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
    <% } %>
</body>
</html>