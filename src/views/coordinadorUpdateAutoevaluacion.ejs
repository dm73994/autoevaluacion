<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Autoevaluación</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-******************************" crossorigin="anonymous">
</head>
<style>
  .navbar {
      display: flex;
      justify-content: space-between;
  }
  
  .navbar-brand {
      flex-grow: 1;
  }
  
  .table-container {
      margin-left: -200px;
      margin-right: auto;
      max-width: 500px;
  }
  
  .table-container table {
      margin-bottom: 0;
  }

  .custom-nav {
      display: flex;
      align-items: center;
  }
  .create-link {
      margin-right: 9000px; 
  }

  .navbar {
      display: flex;
      justify-content: space-between;
      position: sticky;
      top: 0;
      left: 0;
      right: 0;
      z-index: 9999;
  }

  .navbar-brand {
      padding: 5;
  }
  
  .navbar {
      position: relative;
      z-index: 1;
  }

  details {
      position: relative;
      display: inline-block;
      z-index: 2;
  }

  details summary {
      cursor: pointer;
  }

  details ul {
      position: absolute;
      top: 100%;
      left: 0;
      display: none;
      margin: 0;
      padding: 0;
      list-style: none;
      background-color: #9b1a1a;
  }

  details ul li {
      width: 100%;
  }

  details ul li a {
      display: block;
      padding: 10px;
      color: #fff;
      text-decoration: none;
      width: 200px;
  }
  details summary {
      cursor: pointer;
      white-space: nowrap; 
  }
  details ul li a:hover {
      background-color: #555;
  }

  details[open] ul {
      display: block;
  }
</style>
<body>
    
  <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <div class="navbar-brand"> 
        <a>actualizar autoevaluacion</a>
        <details>
            <summary>&#9776;</summary>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="btn btn-info" href="/coordinadorBandejaEntrada">Bandeja de entrada</a></li>
            <li class="nav-item"><a class="btn btn-info" href="/coordinadorListPeriods">Crear periodo académico</a></li>
            <li class="nav-item"><a class="btn btn-info" href="/coordinadorCrudAutoevaluacion">Gestion autoevaluación</a></li>
            <li class="nav-item"><a class="btn btn-info" href="/coordinadorCRUDuser">Gestión docente</a></li>
            <li class="nav-item"><a class="btn btn-info" href="/coordinadorCrudLabor">Gestión labor</a></li>
            <li class="nav-item"><a class="btn btn-info" href="/coordinadorDiligenciarAutoevaluaciones">Realizar autoevaluación</a></li>
            </ul>
        </details>
    </div>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"> 
            <a class="navbar-brand home-link" href="/coordinadorPrincipal"> 
                <i class="fas fa-home"></i>
            </a>
        </li>
    </ul>
  </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/coordinadorUpdateAutoevaluacion/<%= data.autoevaluation_id %>" method="post">
                            <div class="form-group">
                                <label for="user_identification">Identificación de Usuario</label>
                                <select id="user_identification" name="user_identification" class="form-control">
                                  <% dataIdentifications.forEach(identification => { %>
                                    <option value="<%= identification.user_identification %>"
                                      <% if (identification.user_identification === data.user_identification) { %>
                                        selected
                                      <% } %>
                                    >
                                      <%= identification.user_identification %>
                                    </option>
                                  <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="labor_code">Código de Labor</label>
                                <select id="labor_code" name="labor_code" class="form-control">
                                  <% dataCode.forEach(code => { %>
                                    <option value="<%= code.labor_code %>"
                                      <% if (code.labor_code === data.labor_code) { %>
                                        selected
                                      <% } %>
                                    >
                                      <%= code.labor_code %>
                                    </option>
                                  <% }) %>
                                </select>
                              </div>    
                              <div class="form-group">
                                <label for="period_id">ID del Período</label>
                                <select id="period_id" name="period_id" class="form-control">
                                  <% dataPeriods.forEach(period => { %>
                                    <option value="<%= period.period_id %>"
                                      <% if (period.period_id === data.period_id) { %>
                                        selected
                                      <% } %>
                                    >
                                      <%= period.period_name %>
                                    </option>
                                  <% }) %>
                                </select>
                              </div>
                            <div class="form-group">
                                <label for="acto">Acto</label>
                                <select id="acto" name="acto" class="form-control">
                                    <option value="si" <%= data.acto === 'si' ? 'selected' : '' %>>Si</option>
                                    <option value="no" <%= data.acto === 'no' ? 'selected' : '' %>>No</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="state">Estado</label>
                                <select id="state" name="state" class="form-control">
                                    <option value="terminado" <%= data.state === 'terminado' ? 'selected' : '' %>>Terminado</option>
                                    <option value="ejecucion" <%= data.state === 'ejecucion' ? 'selected' : '' %>>En ejecución</option>
                                    <option value="suspendido" <%= data.state === 'suspendido' ? 'selected' : '' %>>Suspendido</option>
                                </select>
                            </div>
                            <div class="form-group">
                              <label for="recomendaciones">Recomendaciones</label>
                              <textarea id="recomendaciones" name="recomendaciones" class="form-control" rows="8"><%= data.recomendaciones %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="date_init">Fecha de Inicio</label>
                                <input type="text" id="date_init" name="date_init" value="<%= data.date_init %>" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="date_finish">Fecha de Finalización</label>
                                <input type="text" id="date_finish" name="date_finish" value="<%= data.date_finish %>" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="activo">Activo</label>
                                <select id="activo" name="activo" class="form-control">
                                    <option value="1" <%= data.activo === 1 ? 'selected' : '' %>>Activo</option>
                                    <option value="-1" <%= data.activo === -1 ? 'selected' : '' %>>Inactivo</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Actualizar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>' ,
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmationButton: <%= showConfirmButton %>,
                timer:<%= timer %>
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#date_init", {
            dateFormat: "Y-m-d"
        });

        flatpickr("#date_finish", {
            dateFormat: "Y-m-d"
        });
    </script>
</body>
</html>